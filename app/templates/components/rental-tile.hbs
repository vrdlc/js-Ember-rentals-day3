<li>{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city.name}} {{rental.cost}}{{/link-to}}
  {{#if isImageShowing }}
    <button {{action 'imageHide'}}>Hide image</button>
     <p><img src={{rental.image}} alt={{rental.type}}></p>
   {{else}}
     <button {{action 'imageShow'}}>Show image</button>
  {{/if}}
</li>
